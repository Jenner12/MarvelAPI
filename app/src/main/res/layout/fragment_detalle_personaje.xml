<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Heroe"
                android:id="@+id/fragmentDetalle.txtNombre"
                android:textSize="26dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/spiderman_profile"
                android:id="@+id/fragmentDetalle.imgFotoPerfil"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biografia"
                android:id="@+id/fragmentDetalle.txtBiografia"
                android:textSize="22dp" />

</LinearLayout>